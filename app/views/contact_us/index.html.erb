<div class ='shadow-sm p-3 mb-5 bg-white rounded'>
    <%= form_tag "/thank_you"%>
    <div class="form-control">
        <div class = "form-group">
            <%= label_tag :name%>
           <%= text_field_tag :name%>
        </div>
        <div class ="form-group">
            <%= label_tag :email%>
            <%= text_field_tag :email%>
        </div>
        <div class = "form-group">
            <%= label_tag :question%>
            <%= text_area_tag :question%>
        </div>
        <%= submit_tag "Send", class: "btn-btn-primary"%>
    </div>


</div>